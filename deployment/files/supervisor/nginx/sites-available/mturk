server {
        listen   80;
        server_name .mturk-tracker.com mturk;

        access_log  %(supervisor_log_dir)s/nginx/mturk.access.log;
        error_log   %(supervisor_log_dir)s/nginx/mturk.error.log;

	rewrite ^/s/(.*)$ /media/$1 last;

        location /media  {
                gzip on;
                root %(project_dir)s;
		autoindex  off;
                expires 60d;
        }

	#location /admin/media {
	#	gzip on;
	#	root /home/mtracker/mturk/src/libs/django/contrib/;
	#	autoindex off;
	#	expires 60d;
	#}

        location / {

		gzip on;

		expires -1;

                #auth_basic            "Restricted";
                #auth_basic_user_file  /etc/nginx/htpasswd;

		proxy_read_timeout 300;
		proxy_connect_timeout 300;

                # host and port to fastcgi server
                fastcgi_pass 127.0.0.1:8001;
                fastcgi_param PATH_INFO $fastcgi_script_name;
                fastcgi_param REQUEST_METHOD $request_method;
                fastcgi_param QUERY_STRING $query_string;
                fastcgi_param CONTENT_TYPE $content_type;
                fastcgi_param CONTENT_LENGTH $content_length;
                fastcgi_param SERVER_PROTOCOL $server_protocol;
                fastcgi_param SERVER_PORT $server_port;
                fastcgi_param SERVER_NAME $server_name;
                fastcgi_pass_header Authorization;
                fastcgi_intercept_errors off;
        }

        location = /robots.txt {
                root   %(project_dir)s/templates/;
        }


        error_page  404  /404.html;
}

